  <body>
    <div class="page-data page-container" id="page-data">
      <div class="padding">
        <div class="row container d-flex justify-data-center">
          <div class="col-lg-8 grid-margin stretch-card">
            <!--weather card-->
            <div class="card card-weather">

              <div class="card-body">
                <div class="search-form">
                  <form method="post" action="/city">
                    <input type="text" placeholder="City Name" name="cityName">
                     <button type="submit">Search</button>
                  </form>
                </div>
                <div class="weather-date-location">
                  <h3><%= %></h3>
                  <p class="text-gray">
                    <span class="weather-date">
                      <h1><%= day[dayno] %></h1>
                      <span>
                        <%= data.timelines.daily[0].time.split("T")[0]%>
                      </span>
                    </span>
                    <!-- ["Sunday", "Monday", "Tuesday", "Wednesday",
                      "Thursday", "Friday", "Saturday"] -->
                    <span class="weather-location">
                      <br>
                      <%= data.location.name.split(",")[0] %>, <%= data.location.name.split(",").slice(2) %>
                    </span>
                  </p>
                </div>
                <div class="weather-data d-flex">
                  <div class="mr-auto">
                    <h4 class="display-3">
                      <%= Math.round(data.timelines.minutely[0].values.temperature) %> <span class="symbol">&deg;</span>C
                    </h4>
                  </div>
                </div>
              </div>
              
              <div class="card-body p-0">
                <div class="d-flex weakly-weather">
                  <div class="weakly-weather-item">
                    <p class="mb-0">Today </p>
                    <i class="mdi mdi-weather-cloudy"></i>
                    <p class="mb-0"><%= Math.round(data.timelines.daily[0].values.temperatureMax) %>&deg;</p>
                  </div>
                  <div class="weakly-weather-item">
                    <p class="mb-1">Tomorrow</p>
                    <i class="mdi mdi-weather-cloudy"></i>
                    <p class="mb-0"> <%= Math.round(data.timelines.daily[1].values.temperatureMax) %>&deg;</p>
                  </div>
                  <div class="weakly-weather-item">
                    <p class="mb-1"><%= day[dayno + 2] %></p>
                    <i class="mdi mdi-weather-cloudy"></i>
                    <p class="mb-0"> <%=Math.round(data.timelines.daily[2].values.temperatureMax) %>&deg;
                  </div>
                  <div class="weakly-weather-item">
                    <p class="mb-1"><%= day[dayno + 3] %></p>
                    <i class="mdi mdi-weather-cloudy"></i>
                    <p class="mb-0"> <%=Math.round(data.timelines.daily[3].values.temperatureMax) %>&deg;
                  </div>
                  <div class="weakly-weather-item">
                    <p class="mb-1"><%= day[dayno + 4] %></p>
                    <i class="mdi mdi-weather-cloudy"></i>
                    <p class="mb-0"> <%=Math.round(data.timelines.daily[4].values.temperatureMax) %>&deg;
                  </div>
                  <div class="weakly-weather-item">
                    <p class="mb-1"><%= day[dayno + 5] %></p>
                    <i class="mdi mdi-weather-cloudy"></i>
                    <p class="mb-0"> <%=Math.round(data.timelines.daily[5].values.temperatureMax) %>&deg;
                    </div>
                </div>
              </div>
            </div>
            <!--weather card ends-->
          </div>
        </div>
      </div>
    </div>
